pipeline{
agent any
  tools {nodejs "nodejs"}
  stages{
    stage ('checkout'){
      steps{
        checkout scm
      }
    }
    stage ('install modules'){
      steps{
        sh '''
           npm install -g @angular/cli;
	   cd Angular-HelloWorld-master
	      npm install;
        '''
      }
    }
    stage ('build') {
      steps{
	      dir("Angular-HelloWorld-master") {		    
		      sh 'ng build --prod'
	      }
      }
    }
  }
  }
